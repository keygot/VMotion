@model VMotion.Models.TblAccount
@{
    ViewData["Title"] = "Xác nhận xóa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index">Danh sách tài khoản</a></li>
            <li class="breadcrumb-item active">Xác nhận xóa tài khoản</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<hr />
<div class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Xác nhận xóa tài khoản</h4>

                    <div class="tab-content pt-2">
                        <div class="tab-pane fade show active" id="bordered-justified-home" role="tabpanel" aria-labelledby="home-tab">
                            <form style="padding-top: 30px !important;" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Delete" asp-route-id="@Model.AccountId" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="AccountId" />
                                

                                <div class="mb-3">
                                    <label for="inputText" class="col-sm-2 col-form-label">Họ Và Tên</label>
                                    <div class="col-sm-12">
                                        <input disabled type="text" asp-for="FullName" class="form-control">
                                    </div>
                                </div>


                                <div class="mb-3">
                                    <label for="inputText" class="col-sm-2 col-form-label">Quyền truy cập</label>
                                    <div class="col-sm-12">
                                        <select class="form-select" aria-label="Default select example" asp-for="RoleId" asp-items="@(new SelectList(ViewBag.RoleList, "Value", "Text"))" class="form-control" disabled> </select>

                                    </div>
                                </div>




                                <div class="mb-3">
                                    <label for="inputText" class="col-sm-2 col-form-label">Số điện thoại</label>
                                    <div class="col-sm-12">
                                        <input disabled type="text" asp-for="Phone" class="form-control">
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="inputText" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-12">
                                        <input disabled type="text" asp-for="Email" class="form-control">
                                    </div>
                                </div>


                                <div class="mb-3">

                                    <label for="inputNumber" class="col-sm-2 col-form-label">Trạng thái</label>

                                    <div class="col-sm-10">
                                        <div class="form-check form-switch" style="padding-bottom: 8px !important;">
                                            <input disabled asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                            <label for="Active" class="form-check-label">Hoạt động</label>
                                        </div>
                                    </div>
                                </div>


                                <div class="mb-3">
                                    <div class="col-sm-12">
                                        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                                    </div>

                                </div>

                            </form><!-- End General Form Elements -->


                        </div>


                    </div><!-- End Bordered Tabs Justified -->
                    <!-- General Form Elements -->

                </div>
            </div>
        </div>
    </div>
</div>



